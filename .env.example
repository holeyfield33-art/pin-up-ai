# Pin-Up AI Configuration
# Copy to .env and adjust for your environment

# --- Backend ---
PINUP_DB=./pinup.db
MCP_PORT=8765

# Environment: "production" (default) or "development"
# Development mode enables /docs and /redoc API documentation
PINUP_ENV=production

# CORS allowed origins (comma-separated)
PINUP_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting: max requests per window
PINUP_RATE_LIMIT=60
PINUP_RATE_WINDOW=60

# Max request body size in bytes (default 1MB)
PINUP_MAX_BODY_SIZE=1048576

# --- Frontend (Vite) ---
VITE_API_URL=http://127.0.0.1:8000
