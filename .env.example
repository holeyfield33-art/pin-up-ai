# Pin-Up AI Configuration

# App Settings
APP_NAME=Pin-Up AI
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=sqlite:///./pinup.db
DB_CHECK_SAME_THREAD=false

# API Settings
API_PREFIX=/api
API_TITLE=Pin-Up AI API
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173","tauri://localhost"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Export
MAX_EXPORT_SIZE=10000000
